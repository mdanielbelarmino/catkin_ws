<launch>

	<!-- Run teleop -->
    <!-- include file="$(find robotic_rover_v2)/launch/robotic_rover_v2_teleop.launch"/ -->

	<!-- Run lidar. -->
 <include file="$(find ydlidar_ros)/launch/X2L.launch"/>
	
	<!-- Wait for the lidar to start up. -->
	<arg name="node_start_delay" default="5.0" />  

	<!-- Run the map server --> 
    <node name="map_server" pkg="map_server" type="map_server" args="$(find robotic_rover_v2)/maps/room.yaml"/>

	<!-- Add transformations. -->

	<!-- <node pkg="tf" type="static_transform_publisher" name="link_to_laser_bc" args="0 0 0 0 0 0 base_link laser_frame 100"/> -->

	<include file="$(find robotic_rover_v2)/launch/hector_mapping.launch"/>
    
<!-- 
		AMCL stuff.
	 -->
	<node pkg="amcl" type="amcl" name="amcl">
		<param name="tf_broadcast" value="true" />
		<param name="base_frame_id" value="base_link" />
		<param name="global_frame_id" value="map" />
		<param name="odom_frame_id" value="scanmatch_odom" />
		<param name="use_map_topic" value="false" />

	    <remap from="scan" to="scan" />
	    <param name="odom_model_type" value="diff" />
	    <param name="transform_tolerance" value="0.2" />
	    <param name="gui_publish_rate" value="-1.0"/>
	    <param name="laser_max_beams" value="100"/>
	    <param name="laser_max_range" value="12"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="update_min_d" value="0.5"/>
    <param name="update_min_a" value="1.0"/>
    <param name="/use_sim_time" value="false"/>
	  </node> 

<!-- MOVEMENT -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find robotic_rover_v2)/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find robotic_rover_v2)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robotic_rover_v2)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robotic_rover_v2)/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find robotic_rover_v2)/base_local_planner_params.yaml" command="load" />
  </node>


	<!-- Run odom transformer. Credit goes to https://github.com/ne0h/hmmwv/blob/master/ros_workspace/src/hmmwv/launch/odomtransformer.launch -->
    <include file="$(find robotic_rover_v2)/launch/odomtransformer.launch"/>

</launch>


