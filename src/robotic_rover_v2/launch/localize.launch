  </node> -->


	<!-- Run odom transformer. Credit goes to https://github.com/ne0h/hmmwv/blob/master/ros_workspace/src/hmmwv/launch/odomtransformer.launch -->
    <!-- <include file="$(find robotic_rover_v2)/launch/odomtransformer.launch"/> -->

</launch>


